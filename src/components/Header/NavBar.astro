---
import BrandLogo from "./BrandLogo.astro";
import NavItem from "./NavItem.astro";
import { NavList } from "./NavList";
import CloseMenuMobile from "../../SVG/CloseMenuMobile.astro";
import OpenMenuMobile from "../../SVG/OpenMenuMobile.astro";
import EmailMessage from "../../SVG/EmailMessage.astro";
import PhoneCall from "../../SVG/PhoneCall.astro";
import ArrowRight from "../../SVG/ArrowRight.astro";
---

<header class="">
  <div class="bg-blue-500 flex justify-center gap-x-96 text-white py-1">
    <label class="text-xl font-bold">Want to Connect with us?</label>
    <div class="flex gap-x-10 items-center font-medium">
      <label class="flex gap-x-[10px] items-center"
        ><EmailMessage /><span>Mail us: support@insuzerella.com</span></label
      >
      <label class="flex gap-x-[10px] items-center"
        ><PhoneCall /> <span>Call us: (877) 277 0774</span></label
      >
    </div>
  </div>
  <nav class="flex items-center px-32 py-4 justify-between">
    <div class="flex items-center justify-between">
      <a class="flex-none text-xl font-semibold w-max" href="/">
        <BrandLogo styles="rounded-xl h-24 w-24" />
      </a>
      <div class="md:hidden">
        <button
          type="button"
          class="hs-collapse-toggle size-8 flex justify-center items-center text-sm font-semibold rounded-full border border-gray-200 text-gray-800 hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none"
          data-hs-collapse="#navbar-collapse-with-animation"
          aria-controls="navbar-collapse-with-animation"
        >
          <OpenMenuMobile />
          <CloseMenuMobile />
        </button>
      </div>
    </div>
    <div
      id="navbar-collapse-with-animation"
      class="hs-collapse hidden overflow-hidden transition-all duration-300 basis-full grow md:block"
    >
      <div
        class="flex flex-row gap-y-4 gap-x-0 mt-5 justify-center md:gap-y-0 md:gap-x-7 md:mt-0"
      >
        {
          NavList.map((nav) => (
            <NavItem
              url={nav.path}
              name={nav.name}
              title={nav.title}
              collapseMenu={nav.collapseMenu}
              dropdownItems={nav.collapseItems}
            />
          ))
        }
      </div>
    </div>
    <div>
      <button class="bg-blue-700 text-white w-max px-5 py-3 rounded-full flex gap-x-2 items-center font-bold"> Call us Now <ArrowRight /> </button>
    </div>
  </nav>
</header>
