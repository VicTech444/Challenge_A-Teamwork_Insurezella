---
import BrandLogo from "./BrandLogo.astro";
import NavItem from "./NavItem.astro";
import { NavList } from "./NavList";
import CloseMenuMobile from "../../SVG/CloseMenuMobile.astro";
import OpenMenuMobile from "../../SVG/OpenMenuMobile.astro";
import EmailMessage from "../../SVG/EmailMessage.astro";
import PhoneCall from "../../SVG/PhoneCall.astro";
import ArrowRight from "../../SVG/ArrowRight.astro";
---

<header class="">
  <div class="grid grid-cols-2 gap-3 bg-blue-500 px-6 py-3">
      <a class="flex-none text-xl font-semibold w-max" href="/">
        <BrandLogo styles="h-24 w-24" />
      </a>
      <div class="md:hidden w-full flex justify-end items-center">
        <button
          type="button"
          class="hs-collapse-toggle size-8 flex justify-center items-center text-sm font-semibold rounded-full disabled:opacity-50 disabled:pointer-events-none text-white"
          data-hs-collapse="#navbar-collapse-with-animation"
          aria-controls="navbar-collapse-with-animation"
        >
          <OpenMenuMobile />
          <CloseMenuMobile />
        </button>
      </div>
    <div class="hidden">
      <button
        class="bg-blue-700 text-white w-max px-5 py-3 rounded-full flex gap-x-2 items-center font-bold"
      >
        Call us Now <ArrowRight />
      </button>
    </div>
    <div class="flex text-white py-1 col-start-1 col-end-3 flex-wrap">
      <label class="text-lg font-bold">Want to Connect with us?</label>
      <div class="flex gap-x-10 items-center font-medium flex-wrap gap-y-2 text-sm">
        <label class="flex gap-x-[10px] items-center"
          ><EmailMessage /><span class="w-fit"
            >Mail us: support@insuzerella.com</span
          ></label
        >
        <label class="flex gap-x-[10px] items-center"
          ><PhoneCall />
          <span class="w-fit">Call us: (877) 277 0774</span></label
        >
      </div>
    </div>
    <nav
    id="navbar-collapse-with-animation"
    class="hs-collapse hidden overflow-hidden transition-all duration-300 basis-full grow md:block bg-white col-end-3 col-start-1 rounded-md p-3"
  >
    <div
      class="flex flex-col gap-y-4 gap-x-0 justify-center md:gap-y-0 md:gap-x-7 md:mt-0"
    >
      {
        NavList.map((nav) => (
          <NavItem
            url={nav.path}
            name={nav.name}
            title={nav.title}
            collapseMenu={nav.collapseMenu}
            dropdownItems={nav.collapseItems}
          />
        ))
      }
    </div>
  </nav>
  </div>
</header>
